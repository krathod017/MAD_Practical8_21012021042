<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#7C2387"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="MAD_Alarm_Practical"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Textview1" >

        <TextView
        android:id="@+id/Textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="  Create Alarm Time"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="By pressing bttons,alarm can be created and canceled."
        android:textSize="16dp"
        android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/Textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="check current time by looking below real degital clock."
            android:textSize="16dp"
            android:layout_marginTop="305dp" />

        <TextView
            android:id="@+id/Textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:45:17 PM Aug,14 2022"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="350dp"
            android:paddingStart="80dp"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            app:icon="@drawable/baseline_add_alarm_24"
            android:text="Create Alarm"
            android:textSize="17dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#A69A9D"
            android:src="@drawable/clock" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="436dp"
        android:layout_height="354dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="582dp">


        <TextView
            android:id="@+id/Textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Set Alarm Time:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="11:49 00PM"
            android:textStyle="bold"/>



        <ImageView
            android:id="@+id/Image2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/clock2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="591dp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>





